{
    "release": {
        "compiler": "g++",
        "cache": ".build",
        "scan": "src",
        "output": "phi",
        "extra": "-std=c++11 -O3 -Wno-switch -Wno-delete-abstract-non-virtual-dtor",
        "includes": [
            "src"
        ],
        "ignore": [
            "src/test_main.cpp"
        ]
    },
    "debug": {
        "compiler": "g++",
        "cache": ".debug_build",
        "scan": "src",
        "output": "debug",
        "extra": "-g -std=c++11 -DDEBUG -Wno-switch -Wno-delete-abstract-non-virtual-dtor",
        "includes": [
            "src"
        ],
        "auto_run": false,
        "ignore": [
            "src/test_main.cpp"
        ]
    },
    "test": {
        "compiler": "g++",
        "cache": ".test_build",
        "scan": "src",
        "output": "test",
        "extra": "-g -std=c++11 -DDEBUG -DTEST -Wno-switch -Wno-delete-abstract-non-virtual-dtor",
        "includes": [
            "src"
        ],
        "ignore": [
            "src/main.cpp"
        ]
    },
    "test_debug": {
        "compiler": "g++",
        "cache": ".test_build",
        "scan": "src",
        "output": "test",
        "auto_run": false,
        "extra": "-g -Isrc -std=c++11 -DDEBUG -DTEST -Wno-switch -Wno-delete-abstract-non-virtual-dtor",
        "ignore": [
            "src/main.cpp"
        ]
    }
}