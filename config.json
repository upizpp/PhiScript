{
    "release": {
        "compiler": "g++",
        "cache": "cache/.build",
        "scan": "src",
        "output": "build/release/phi",
        "extra": "-std=c++11 -O2 -Wno-switch",
        "dependence": [
            "build/lib/libgcc_s_seh-1.dll",
            "build/lib/libstdc++-6.dll"
        ],
        "includes": [
            "src"
        ],
        "ignore": [
            "src/test_main.cpp"
        ]
    },
    "release_static": {
        "compiler": "g++",
        "cache": "cache/.build",
        "scan": "src",
        "output": "build/release_static/phi",
        "extra": "-std=c++11 -O2 -Wno-switch",
        "link_extra": "-static",
        "includes": [
            "src"
        ],
        "ignore": [
            "src/test_main.cpp"
        ]
    },
    "dll": {
        "compiler": "g++",
        "cache": "cache/.dll_build",
        "scan": "src",
        "output": "build/dll/phi.dll",
        "extra": "-std=c++11 -shared -O2 -Wno-switch",
        "link_extra": "-shared",
        "auto_run": false,
        "includes": [
            "src"
        ],
        "dependence": [
            "src/phi/phi.h"
        ],
        "ignore": [
            "src/main.cpp",
            "src/test_main.cpp"
        ]
    },
    "dll_static": {
        "compiler": "g++",
        "cache": "cache/.dll_build",
        "scan": "src",
        "output": "build/dll/phi.dll",
        "extra": "-std=c++11 -shared -O2 -Wno-switch",
        "link_extra": "-shared -static",
        "auto_run": false,
        "includes": [
            "src"
        ],
        "dependence": [
            "build/lib/libgcc_s_seh-1.dll",
            "build/lib/libstdc++-6.dll",
            "src/phi/phi.h"
        ],
        "ignore": [
            "src/main.cpp",
            "src/test_main.cpp"
        ]
    },
    "debug": {
        "compiler": "g++",
        "cache": "cache/.debug_build",
        "scan": "src",
        "output": "build/debug/phi",
        "extra": "-g -std=c++11 -DDEBUG -Wno-switch",
        "includes": [
            "src"
        ],
        "auto_run": false,
        "ignore": [
            "src/test_main.cpp"
        ]
    },
    "test": {
        "compiler": "g++",
        "cache": "cache/.test_build",
        "scan": "src",
        "output": "build/test/phi",
        "extra": "-g -std=c++11 -DDEBUG -DTEST -Wno-switch",
        "includes": [
            "src"
        ],
        "ignore": [
            "src/main.cpp"
        ]
    },
    "test_debug": {
        "compiler": "g++",
        "cache": "cache/.test_build",
        "scan": "src",
        "output": "build/test/phi",
        "auto_run": false,
        "extra": "-g -Isrc -std=c++11 -DDEBUG -DTEST -Wno-switch",
        "ignore": [
            "src/main.cpp"
        ]
    }
}