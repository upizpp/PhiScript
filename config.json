{
    "release": {
        "compiler": "g++",
        "cache": ".build",
        "scan": "src",
        "output": "phi.exe",
        "extra": "-Isrc -std=c++11 -O3",
        "ignore": [
            "src/test_main.cpp"
        ]
    },
    "debug": {
        "compiler": "g++",
        "cache": ".debug_build",
        "scan": "src",
        "output": "debug.exe",
        "extra": "-g -Isrc-std=c++11 -DDEBUG",
        "auto_run": false,
        "ignore": [
            "src/test_main.cpp"
        ]
    },
    "test": {
        "compiler": "g++",
        "cache": ".test_build",
        "scan": "src",
        "output": "test.exe",
        "extra": "-g -Isrc -std=c++11 -DDEBUG -DTEST",
        "ignore": [
            "src/main.cpp"
        ]
    }
}