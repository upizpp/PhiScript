{
    "release": {
        "compiler": "g++",
        "cache": ".build",
        "scan": "src",
        "extra": "-Isrc -std=c++11 -O3"
    },
    "debug": {
        "compiler": "g++",
        "cache": ".build",
        "scan": "src",
        "extra": "-g -Isrc-std=c++11 -DDEBUG",
        "auto_run": false
    },
    "test": {
        "compiler": "g++",
        "cache": ".build",
        "scan": "src",
        "extra": "-g -Isrc -std=c++11 -DDEBUG -DTEST"
    }
}